{
  "name": "udesk-app",
  "private": true,
  "version": "1.0.8",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "setup": "npm install && npm run tauri:dev",
    "install-deps": "npm install",
    "check-system": "echo 'Checking system requirements...' && node --version && npm --version",
    "clean": "rm -rf node_modules dist target && npm install",
    "help": "echo 'Available commands:' && echo '  npm run setup      - Install dependencies and start dev server' && echo '  npm run tauri:dev  - Start Tauri development server' && echo '  npm run tauri:build- Build production app' && echo '  npm run clean      - Clean and reinstall dependencies'"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-fs": "^2.2.0",
    "@tauri-apps/plugin-opener": "2.2.3",
    "@tauri-apps/plugin-process": "^2.2.0",
    "@tauri-apps/plugin-shell": "^2.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}
